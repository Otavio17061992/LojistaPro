@page
@model LojistaPro.Pages.Login.IndexModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<div class="login-bg">
    <div class="login-card">
        <div class="login-title">Bem-vindo</div>
        <form method="post" asp-page-handler="Login">
            <div class="form-group">
                <label asp-for="Input.UserName">Usu√°rio</label>
                <input asp-for="Input.UserName" class="form-control" autocomplete="username" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Passaword">Senha</label>
                <input asp-for="Input.Passaword" type="password" class="form-control" autocomplete="current-password" />
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
            <span asp-validation-summary="All" class="text-danger"></span>
        </form>
    </div>
</div>