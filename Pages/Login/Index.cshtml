@page
@model LojistaPro.Pages.Login.IndexModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="login-bg">
    <div class="login-card">
        <div class="login-title">Bem-vindo</div>
        <form method="post" asp-page-handler="Login">
            <div class="form-group">
                <label asp-for="Input.UserName">Usu√°rio</label>
                <input asp-for="Input.UserName" class="form-control" autocomplete="username" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Password">Senha</label>
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" />
            </div>
            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Entrar</button>
                <span asp-validation-summary="All" class="text-danger"></span>

                <div class="form-group">
                    <a asp-page="/Cadastro/Index" class="btn btn-secondary">Registrar</a>
                </div>
            </div>
        </form>
    </div>
</div>